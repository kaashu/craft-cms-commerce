{% extends "_layouts/base" %}
{% set title = "Your Cart" %}

{% block content %}
<section class="max-w-4xl mx-auto px-6 py-10">
  <h1 class="text-2xl font-bold mb-6">{{ title }}</h1>

  {% set cart = craft.commerce.carts.cart %}
  {% if cart and cart.lineItems|length %}
    <table class="w-full border">
      <thead>
        <tr class="bg-gray-100">
          <th class="p-3 text-left">Product</th>
          <th class="p-3 text-left">Qty</th>
          <th class="p-3 text-left">Price</th>
          <th class="p-3 text-left">Subtotal</th>
        </tr>
      </thead>
      <tbody>
        {% for item in cart.lineItems %}
          <tr>
            <td class="p-3">{{ item.description }}</td>
            <td class="p-3">{{ item.qty }}</td>
            <td class="p-3">${{ item.price|number_format(2) }}</td>
            <td class="p-3">${{ item.subtotal|number_format(2) }}</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>

    <div class="mt-6 flex justify-between">
      <span class="text-xl font-bold">Total: ${{ cart.totalPrice|number_format(2) }}</span>
      <a href="#" class="bg-green-600 hover:bg-green-700 text-white font-medium py-3 px-6 rounded-lg">
        Checkout
      </a>
    </div>
  {% else %}
    <p>Your cart is empty.</p>
  {% endif %}
</section>
{% endblock %}
