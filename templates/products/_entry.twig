{% extends "_layouts/base" %}
{% set title = product.title %}

{% block content %}
<section class="max-w-6xl mx-auto px-6 py-10">
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
    
   
    <div>
      {% if product.featuredImage.one() %}
        <img src="{{ product.featuredImage.one().url }}" 
             alt="{{ product.title }}" 
             class="w-full h-auto rounded-2xl shadow-md object-cover" />
      {% endif %}
    </div>

    
    <div class="flex flex-col">
      <h1 class="text-3xl font-bold text-gray-900">{{ product.title }}</h1>
      <p class="mt-3 text-2xl font-semibold text-green-600">
        ${{ product.defaultPrice|number_format(2) }}
      </p>

      {% if product.description is defined and product.description %}
        <div class="mt-6 text-gray-700 leading-relaxed">
          {{ product.description|raw }}
        </div>
      {% endif %}

      
      <div class="mt-8">
        <form method="post" accept-charset="UTF-8">
        {{ csrfInput() }}
        {{ actionInput('commerce/cart/update-cart') }}

        
        {% if product.variants|length > 1 %}
            <label for="variantId" class="block text-sm font-medium text-gray-700 mb-2">Choose Variant:</label>
            <select id="variantId" name="purchasables[0][id]" class="border rounded-lg px-3 py-2 w-full mb-4">
            {% for variant in product.variants %}
                <option value="{{ variant.id }}">
                {{ variant.sku }} — ${{ variant.price|number_format(2) }}
                </option>
            {% endfor %}
            </select>
        {% else %}
            {# Single variant → add it hidden #}
            <input type="hidden" name="purchasables[0][id]" value="{{ product.defaultVariant.id }}">
        {% endif %}

        
        <label for="qty" class="block text-sm font-medium text-gray-700 mb-2">Quantity:</label>
        <input id="qty" type="number" name="purchasables[0][qty]" value="1" min="1"
                class="border rounded-lg px-3 py-2 w-24 mb-4" />

        <button type="submit" 
                class="w-full lg:w-auto bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-6 rounded-lg shadow-md transition">
            Add to Cart
        </button>
        </form>
      </div>
    </div>
  </div>
</section>
{% endblock %}
