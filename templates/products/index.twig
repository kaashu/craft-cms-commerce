{% extends "_layouts/base" %}
{% set title = "Products" %}

{% block content %}
  <section class="max-w-7xl mx-auto px-6 py-10">
    <h1 class="text-3xl font-bold mb-8">{{ title }}</h1>

    {% set products = craft.products.type('tShirts').all() %}

    {% if products|length %}
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        {% for product in products %}
          <div class="border rounded-2xl shadow-sm hover:shadow-md transition bg-white p-4 flex flex-col">
            
            {# Featured Image #}
            {% if product.featuredImage.one() %}
              <a href="{{ product.url }}" class="block overflow-hidden rounded-xl">
                <img src="{{ product.featuredImage.one().url }}" 
                     alt="{{ product.title }}" 
                     class="w-full h-64 object-cover hover:scale-105 transition-transform" />
              </a>
            {% endif %}

            {# Product Info #}
            <div class="mt-4 flex flex-col flex-grow">
              <a href="{{ product.url }}" class="text-lg font-semibold text-gray-900 hover:text-blue-600">
                {{ product.title }}
              </a>
              <p class="text-gray-600 text-sm mt-1">
                {{ product.description|striptags|slice(0, 80) ~ 'â€¦' }}
              </p>
              <div class="mt-auto pt-4 flex items-center justify-between">
                <span class="text-xl font-bold text-green-600">
                  ${{ product.defaultPrice|number_format(2) }}
                </span>
                <a href="{{ product.url }}" 
                   class="bg-blue-600 text-white text-sm px-4 py-2 rounded-lg hover:bg-blue-700 transition">
                  View
                </a>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <p class="text-gray-500">No products available yet.</p>
    {% endif %}
  </section>
{% endblock %}
